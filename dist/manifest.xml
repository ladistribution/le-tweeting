<package>
  <id>le-tweeting</id>
  <name>Le Tweeting</name>
  <version>0.1-9</version>
  <type>application</type>
  <need>lib-zend-framework</need>
  <need>lib-ld</need>
  <need>lib-limonade</need>
  <need>css-h6e-minimal</need>
  <need>css-ld-ui</need>
  <install>
      <preference type="user" label="Administrator" name="administrator" value=""/>
  </install>
  <configuration>
      <preference type="text" label="Application Name" name="name"/>
      <preference type="text" label="Consumer Key" name="consumerKey"/>
      <preference type="text" label="Consumer Secret" name="consumerSecret"/>
      <preference type="user" label="Associate with User" name="associatedUser" value=""/>
      <preference type="range" label="Items per page" name="maxItems" min="5" max="200" step="5" defaultValue="50"/>
  </configuration>
  <colors>
      <scheme>base</scheme>
      <scheme>bars</scheme>
      <scheme>panels</scheme>
  </colors>
  <link title="Timeline" rel="feed" type="application/atom+xml" href="/feed"/>
</package>